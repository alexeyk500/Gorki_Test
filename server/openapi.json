{
  "openapi": "3.0.3",
  "info": {
    "title": "GKGorki test assigment",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1",
      "description": "devServer"
    }
  ],
  "paths": {
    "/ping": {
      "get": {
        "tags": [
          "Test"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "pong"
                }
              }
            }
          }
        }
      }
    },
    "/purchases": {
      "post": {
        "tags": [
          "Purchases"
        ],
        "summary": "Add a new item with purchase summ for discount card history",
        "description": "Add a new item with purchase summ for discount card history",
        "operationId": "addPurchase",
        "requestBody": {
          "description": "Add a new item with purchase summ for discount card history",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventData"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "New item for purchase history sucessfully added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Discount"
                }
              }
            }
          },
          "400": {
            "description": "Invalid summ amount",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Card not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/refunds": {
      "post": {
        "tags": [
          "Refunds"
        ],
        "summary": "Add a new item with returns summ for discount card history",
        "description": "Add a new item with returns summ for discount card history",
        "operationId": "addReturns",
        "requestBody": {
          "description": "Add a new item for purchase history for discount card",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventData"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "New item for purchase history sucessfully added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Discount"
                }
              }
            }
          },
          "400": {
            "description": "Invalid summ amount",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Card not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/levels": {
      "post": {
        "tags": [
          "Levels"
        ],
        "summary": "Get current level for discount card",
        "description": "Get current level for discount card",
        "operationId": "getDiscountLevel",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "card": {
                    "$ref": "#/components/schemas/Card"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "New item for purchase history sucessfully added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Level"
                }
              }
            }
          },
          "400": {
            "description": "Invalid summ amount",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Card not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/discounts": {
      "post": {
        "tags": [
          "Discounts"
        ],
        "summary": "Get current discount percent for discount card",
        "description": "Get current discount percent for discount card",
        "operationId": "getDiscountPercent",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "card": {
                    "$ref": "#/components/schemas/Card"
                  },
                  "data": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "New item for purchase history sucessfully added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Discount"
                }
              }
            }
          },
          "400": {
            "description": "Invalid summ amount",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Card not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Card": {
        "type": "string",
        "example": "1111333355557777"
      },
      "Level": {
        "required": [
          "level"
        ],
        "type": "object",
        "properties": {
          "level": {
            "type": "string",
            "enum": [
              "Platinum",
              "Gold",
              "Silver",
              "Bronze"
            ],
            "example": "Gold"
          }
        }
      },
      "Discount": {
        "required": [
          "percent"
        ],
        "type": "object",
        "properties": {
          "percent": {
            "type": "number",
            "example": 7
          }
        }
      },
      "EventData": {
        "required": [
          "card",
          "summ"
        ],
        "type": "object",
        "properties": {
          "card": {
            "$ref": "#/components/schemas/Card"
          },
          "summ": {
            "type": "number",
            "example": 123.45
          }
        }
      },
      "Error": {
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string",
            "example": "Invalid data"
          }
        }
      }
    }
  }
}